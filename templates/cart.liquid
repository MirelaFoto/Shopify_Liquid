
{% form 'cart', cart %}

<h1>Cart </h1>
{% if cart.empty? %}
<p> Your cart is empty! Continue shopping </p>
{% else %}
{% for item in cart.items  %}
<div>
<img src="{{item.image | image_url:width:300}}">
<h2>{{item.title}}</h2>
<p>{{item.final_line_price | money}}</p>
<input name="updates[]" value="{{item.quantity}} ">
<a href="{{item.url_to_remove}} "> Remove </a>
</div>
{% endfor %}
<hr>
<p> Total: {{cart.total_price | money}}</p>
<button class='add' type='submit' name='update'>

Update
</button>
<button class='add' type='submit' name='checkout'>

Checkout
</button>

{%endif%}
{% endform %}